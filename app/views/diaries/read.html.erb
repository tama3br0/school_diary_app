<h1>にっきを えらぶ</h1>
<%= link_to 'さいしょに もどる', authenticated_root_path, class: 'button' %>

<div class="week-navigation">
  <%= link_to 'まえの しゅう', read_diaries_path(date: (params[:date]&.to_date || Date.today).beginning_of_week(:monday) - 7.days), class: 'button' %>
  <span>こんしゅう</span>
  <%= link_to 'つぎの しゅう', read_diaries_path(date: (params[:date]&.to_date || Date.today).beginning_of_week(:monday) + 7.days), class: 'button' %>
</div>

<% @diaries.each do |week_start, diaries| %>
  <h2><%= week_start.strftime('%Y年 %m月 %d日') %> - <%= (week_start + 4.days).strftime('%d日') %></h2>
  <ul>
    <% diaries.each do |diary| %>
      <li>
        <%= link_to "#{diary.date.strftime('%m月 %d日 (%a)')} の にっき", diary_path(diary) %>
      </li>
    <% end %>
  </ul>
<% end %>
